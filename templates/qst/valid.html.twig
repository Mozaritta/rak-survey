{% extends 'layouts/base.html.twig' %}

{% block title %}Rak Survey!{% endblock %}

{% block body %}
<style> 
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello ! âœ…</h1>    

    This is the list of valid questions
    <ul>
    {% for qst in qsts %}
        {% if qst.valid %}
            <div style="display:flex;font-weight:bold; font-size:20px">
            <i class="bi bi-question-octagon"></i><small> &nbsp</small><li style="list-style: none;">{{ qst.description }}</li>
        </div>
        <div class="btn-group text-center" role="group" aria-label="Basic mixed styles example">
                <a type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">Add</a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="#">To new survey</a></li>
                    <li><a class="dropdown-item" href="#">To existing survey</a></li>
                </ul>                <a type="button" class="btn btn-success" href="{{ path('update_qst', {id: qst.id}) }}">Update</a>
                <a type="button" class="btn btn-danger" href="{{ path('delete_qst', {id: qst.id}) }}" onclick="return confirm('You sure you want to delete?')">Delete</a>
            </div>
        <ul>
            <li style="list-style: none;"><small> Type : {{qst.type.name}}</small>
            <li style="list-style: none;"><small> Subbmitted : {{qst.createdAt|date}}</small></li>
            </li></ul>
        {% endif %}
    {% endfor %}
    </ul>
</div>
{% endblock %}
