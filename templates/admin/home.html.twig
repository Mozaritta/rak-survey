{% extends 'layouts/base.html.twig' %}

{% block title 'Show sections!' %}

{% block body %}
<style> 
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5;padding: 2px 6px; }
</style>
<h1 class="text-center my-4">Main admin page</h1>
<div class="container">
<h4>List of users </h4>
<table class="table table-bordered border-primary text-center" style="max-width:1000px; margin:50px auto">
{# <tr class="bg-primary text-white"> #}
<tr>
<th>ID</h>
<th>First Name </th>
<th>Last Name </th>
<th>Email </th>
<th>Form Answerd </th>
<th>Role </th>
<th>Remark </th>
{# {{ dump(clients) }} #}
</tr>
{% for client in pagination %}
<tr>
    <td>{{ client.id}}</td>
    <td>{{ client.firstName}}</td>
    <td>{{ client.lastName}}</td>
    <td>{{ client.email}}</td>
    <td>{% if(client.answered is same as null) %} No {% elseif client.answered is same as true %} Yes {% endif %}</td>
    <td>{{ client.roles[0]}}</td>
    {% if client.remark is not same as null %}
    <td>{{ client.remark.description}}</td>
        {% else %}
    <td>No remark</td>
    {% endif %}
</tr>
{% endfor %}
</table>
{{include('layouts/partials/_pagination.html.twig')}}

{% endblock %}