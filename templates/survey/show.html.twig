{% extends 'layouts/base.html.twig' %}

{% block title 'Create Form!' %}

{% block body %}
<style> 
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Show All Forms âœ…</h1>
<div class="row row-cols-1 row-cols-md-3 g-4">
{% for survey in srv %}
    <div class="col">
        <div class="card h-100">
            <img src="asset('/assets/images/images.png')" class="card-img-top" alt="...">
            <h5 class="card-title text-center pt-3">{{survey.name}}</h5>
            <div class="card-body">
                <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This card has even longer content than the first to show that equal height action.</p>
            </div>
            <div class="card-footer">
                <small class="text-muted">Last updated {{survey.createdAt|ago}}</small>
            </div>
        </div>
    </div>
{% endfor %}
</div>
</div>
{% endblock %}